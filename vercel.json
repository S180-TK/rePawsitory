{
  "version": 2,
  "builds": [
    {
      "src": "pet-health-backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "pet-health-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/pet-health-backend/server.js"
    },
    {
      "src": "/pets/(.*)",
      "dest": "/pet-health-backend/server.js"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "/pet-health-backend/server.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/pet-health-frontend/$1"
    }
  ]
}
