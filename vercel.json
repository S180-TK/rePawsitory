{
  "version": 2,
  "builds": [
    {
      "src": "pet-health-backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "pet-health-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "pet-health-backend/server.js"
    },
    {
      "src": "/pets/(.*)",
      "dest": "pet-health-backend/server.js"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "pet-health-backend/server.js"
    },
    {
      "src": "/static/(.*)",
      "dest": "pet-health-frontend/build/static/$1"
    },
    {
      "src": "/manifest.json",
      "dest": "pet-health-frontend/build/manifest.json"
    },
    {
      "src": "/robots.txt",
      "dest": "pet-health-frontend/build/robots.txt"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot))",
      "dest": "pet-health-frontend/build/$1"
    },
    {
      "src": "/(.*)",
      "dest": "pet-health-frontend/build/index.html"
    }
  ]
}
